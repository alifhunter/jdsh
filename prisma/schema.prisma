generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


model HoldingEntry {
  id              String   @id @default(uuid())
  usernameDisplay String
  usernameKey     String   @unique
  isBlurred       Boolean  @default(false)
  lots            Int
  avgPrice        Decimal  @db.Decimal(20, 2)
  totalNominal    Decimal  @db.Decimal(20, 2)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([lots(sort: Desc), totalNominal(sort: Desc), usernameKey(sort: Asc)], map: "HoldingEntry_rank_idx")
}
